{{#> layout}}
{{#*inline "content"}}
<!DOCTYPE html>
<html>
<head>
    <style>
    @keyframes mymove {
  40% {font-size: 40px;}
  30% {color: #0066b2 }
}
        .container {
            align-self: center;
            display: flex;
            flex-direction: column;
            margin-top: 7%;
            height: 400px;
        }
        .signup-form{
            display: flex;
            flex-direction: column;
            width: 500px;
            border: 2px solid darkgray;
            border-radius: 8px;
            padding: 28px;
            margin: auto auto;
            justify-content: space-around;
            height: 230px;
        }
        .submit {
            border-radius: 5px;
            padding: 5px 10px;
            align-self: center;
            width: 150px;
        }
        .title {
            text-align: center;
            animation: mymove 15s infinite;

        }
        .title:hover {
            color: #0066b2;
            transition: all 0.5s ease ;
        }
        .input {
            border-radius: 5px;
            padding: 5px 10px;
        }
        .input:hover {
            border: 2px solid #0066b2;
            transition: all 0.5s  ;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="title">Login</h1>

<form method="POST" action="/sessions" class="signup-form" >
    <input type="text" id="email" name="email" class="input" placeholder="Email"/>
    <input type="password" id="password" name="password" class="input" placeholder="Password" />

    <input type="submit" id="submit" class="submit" />
</form>
</div>
</body>
</html>
{{/inline}}
{{/layout}}