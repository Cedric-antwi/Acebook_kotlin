{{#> layout}}
{{#*inline "content"}}

<div class="navbar-links">

<h3>All Users</h3>
<h3>pending requests</h3>

    {{#each pending}}
<div style="
display:flex;
flex-direction:column;
align-content:flex-end;
flex-wrap:wrap;
align-items:stretch;
padding-right: 50px">
<div class="w3-card w3-round w3-white w3-center">
<div class="w3-container">
<p>{{pending}}</p><br>
<p>{{query}}</p>
</div>
</div>
{{/each}}

</div>

{{#each users}}
    <div style="
display:flex;
flex-direction:column;
align-content:flex-start;
flex-wrap:wrap;
align-items:stretch;
padding-left: 50px">
        <div class="w3-col m3">
<div class="w3-card w3-round w3-white w3-center">
    <div class="w3-container">
        <span>{{username}}</span> <br>
        <span>{{firstName}} {{lastName}}</span>
        <form action="/friendslist/pending-friend/{{id}}">
            <input type="submit" value="Add friend">
        </form>
        </div>
    </div>
</div>
    </div>

<br>
{{/each}}
</div>

    {{/inline}}
{{/layout}}