<html>
{{#> layout}}
    {{#*inline "content"}}
        <div class="navbar-links">
        </div>
            <h3>All Users</h3>
            <!-- Page Container -->
            <div class="w3-container w3-content" style="max-width:1400px;margin-top:30px">
                <!-- The Grid -->
                <div class="w3-row">
                    <!-- Top Column -->
                    <div class="w3-col m3" style="display: flex">
                        {{#each users}}
                            <div class="w3-card w3-round w3-white w3-center"
                                 style="display: flex; flex-direction: row; margin: 10px">
                                <div class="w3-container">
                                    <img src="{{image}}" class="w3-circle" style="height:80px;width:80px;margin:10px"
                                         alt="Avatar">
                                    <br>
                                    <span>{{firstName}} {{lastName}}</span> <br>
                                    <span>@{{username}}</span> <br>
                                    <form action="/friendslist/pending-friend/{{id}}">
                                        <input type="submit" class="w3-button w3-theme-d1 w3-margin-bottom"
                                               value="Add friend">
                                    </form>
                                </div>
                            </div>
                            <br>
                        {{/each}}
                    </div>
                </div>
            </div>
            <br><br>
            <h3>Pending requests</h3>
            <!-- Page Container -->
            <div class="w3-container w3-content" style="max-width:1400px;margin-top:30px">
                <!-- The Grid -->
                <div class="w3-row">
                    <!-- Bottom Column -->
                    <div class="w3-col m3" style="display: flex">
                        {{#each pendingReq}}
                            <div class="w3-card w3-round w3-white w3-center"
                                 style="display: flex; flex-direction: row ; margin: 10px">
                                <div class="w3-container  w3-padding">
                                    <img src="{{image}}" class="w3-circle" style="height:80px;width:80px;margin:10px"
                                         alt="Avatar">
                                    <div>
                                        <p>{{firstName}} {{lastName}}</p>
                                        <p>@{{username}}</p>
                                        <button type="submit" class="w3-button w3-theme-d1 w3-margin-bottom"><a href="/friendslist/accept/{{userID}}" style="text-decoration: none;">Accept Request</a></button>
                                        <button type="submit" formaction="" class="w3-button w3-theme-d1 w3-margin-bottom"><a href="/friendslist/delete/{{friendRequestID}}" style="text-decoration: none;">Delete</a></button>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
    {{/inline}}
{{/layout}}